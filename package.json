{
  "name": "typescript_template",
  "version": "1.0.0",
  "description": "This is sample template of typescript which consists of nodemon and tsc, and generates '.js' in 'dist' directory from 'src/' directory",
  "main": "dist/example.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/example.js",
    "start:server": "nodemon example.js",
    "start:tsc": "tsc -w"
  },
  "nodemonConfig": {
    "watch": ["dist/*"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjarman/TypeScript-Template.git"
  },
  "author": "Rafsun Jany Arman",
  "license": "MIT License",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/ini": "^1.3.30",
    "@types/node": "^14.6.0",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.0"
  }
}
